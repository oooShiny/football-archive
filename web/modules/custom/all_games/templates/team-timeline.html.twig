{% for season, data in videos %}
<div class="bg-gray-200 rounded m-2 p-2">
    <h2 class="text-lg py-2">{{ season }}</h2>

    {# Show the Yearbook video for this season, if there is one. #}
    {% for feature in data['features'] %}
        {% if 'Yearbook' in feature.title %}
            <div><img class="h-5 float-left pr-4" src="/themes/custom/football_theme/images/icons/book.png" alt=""><a href="/node/{{ feature.id }}">Season Yearbook</a></div>
        {% endif %}
    {% endfor %}

    {# Now list all the games. #}
    <ol class="mt-3 divide-y divide-gray-300">
    {% for game in data['games'] %}
        {% if game.id %}
            {% set css = '' %}
            {% set text %}
                <a href="/node/{{ game.id }}">{{ game.title }}</a>
            {% endset %}
        {% else %}
            {% set css = 'text-gray-400' %}
            {% set text %}
                <span>{{ game.title }}</span>
            {% endset %}
        {% endif %}
            <li class="{{ css }}"><img class="h-5 float-left pr-4" src="/themes/custom/football_theme/images/icons/helmet.png" alt="">
                {{ text }}
            </li>
    {% endfor %}
    </ol>

    {# Show the any other feature videos. #}
    {% for feature in data['features'] %}
        {% if 'Yearbook' not in feature.title %}
            <div><img class="h-5 float-left pr-4" src="/themes/custom/football_theme/images/icons/film.png" alt=""><a href="/node/{{ feature.id }}">{{ feature.title }}</a></div>
        {% endif %}
    {% endfor %}
</div>
{% endfor %}
